{
  "compilerOptions": {
    "module": "commonjs",
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "typeRoots": ["./node_modules/@types", "./types"], // Вказуємо на стандартну папку і папку з кастомними типами
    "experimentalDecorators": true,
    "target": "es2017",
    "sourceMap": true,
    "outDir": "./dist",
    "incremental": true,
    "skipLibCheck": true
  },
  "include": ["./src/**/*","types"],
  "exclude": ["node_modules", "dist", "module-spec"]
}